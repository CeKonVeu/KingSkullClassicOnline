@using KingSkullClassicOnline.Client.Shared.Components
@inject IDialogService DialogService

<div>
    <BaseDialog>
        <MudContainer MaxWidth="MaxWidth.Medium">
            <MudStack>
                @foreach (var nbCard in NbCards)
                {
                    <CardSlider
                        Name="@nbCard.Item1"
                        Color="@nbCard.Item2"
                        Value="@nbCard.Item3"/>
                }

                <MudButton
                    OnClick="CloseCardsDialog"
                    Color="Color.Primary">
                    Valider
                </MudButton>

            </MudStack>
        </MudContainer>
    </BaseDialog>
</div>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    void CloseCardsDialog()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

    public Tuple<string, Color, int>[] NbCards =
    {
        Tuple.Create("SkullKing", Color.Default, 1),
        Tuple.Create("Pirate", Color.Dark, 5),
        Tuple.Create("ScaryMary", Color.Success, 1),
        Tuple.Create("Mermaid", Color.Secondary, 1),
        Tuple.Create("Escape", Color.Tertiary, 5)
    };

}