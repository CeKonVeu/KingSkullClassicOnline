@inherits LayoutComponentBase

<MudThemeProvider Theme="CustomTheme"/>
<MudSnackbarProvider/>

<MudDialogProvider
    FullWidth="true"
    MaxWidth="MaxWidth.ExtraSmall"
    CloseButton="true"
    DisableBackdropClick="false"
    Position="DialogPosition.Center"
/>

<MudLayout>
    <MudMainContent Class="py-8">
        <MudContainer Class="mx-auto" Style="height:100vh">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    readonly MudTheme CustomTheme = new()
    {
        Palette = new Palette
        {
            Primary = Colors.Yellow.Darken1,
            Secondary = Colors.Green.Accent4,
            PrimaryContrastText = Colors.Shades.Black,
            TextSecondary = Colors.Yellow.Darken1,
            TextPrimary = Colors.Shades.White,
            LinesInputs = Colors.Yellow.Darken1,
            ActionDefault = Colors.Yellow.Lighten3
        },
        LayoutProperties = new LayoutProperties
        {
            AppbarHeight = "0"
        }
    };
}