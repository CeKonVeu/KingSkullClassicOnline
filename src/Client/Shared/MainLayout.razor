@inherits LayoutComponentBase

<MudThemeProvider Theme="CustomTheme"/>
<MudSnackbarProvider/>

<MudDialogProvider
    FullWidth="true"
    MaxWidth="MaxWidth.ExtraSmall"
    CloseButton="true"
    DisableBackdropClick="false"
    Position="DialogPosition.Center"/>

<MudLayout>
    <MudMainContent Class="pt-0">
        <MudContainer Class="mx-auto py-8" Style="height:100vh">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    readonly MudTheme CustomTheme = new()
    {
        Palette = new Palette
        {
            Primary = Colors.Amber.Default,
            PrimaryContrastText = Colors.Shades.Black,
            TextPrimary = Colors.Shades.Black,
    // Secondary = Colors.Green.Accent4,
    // PrimaryContrastText = Colors.Shades.Black,
            TextSecondary = Colors.Yellow.Darken1,
    // TextPrimary = Colors.Shades.White,
            LinesInputs = Colors.Yellow.Darken1,
            ActionDefault = Colors.Yellow.Darken3,
            Surface = Colors.Amber.Lighten3
        }
    };
}