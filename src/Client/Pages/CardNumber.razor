<MudSlider
    @bind-Value="@Value"
    TickMarks="true"
    Variant="Variant.Filled"
    Min="0"
    Max="10"
    Color="@Color">
    Nombre de cartes "@Name" : @Value
</MudSlider>

@code {

    [Parameter]
    public string? Name { get; set; }

    [Parameter]
    public Color Color { get; set; } = Color.Primary;

    [Parameter]
    public int Value { get; set; }

}