@page "/creategame"

<PageTitle>Create Game</PageTitle>

<MudText
    Style="@($"color:{Colors.Yellow.Darken1}")"
    Typo="Typo.h1"
    Align="Align.Center">
    <b>KING SKULL<br/>CLASSIC ONLINE</b>
</MudText>

<MudContainer Class="mt-4" MaxWidth="MaxWidth.Small">
    <MudStack>
        <MudTextField
            @bind-Value="TextValue"
            Style="@($"color:{Colors.Grey.Default}; background:{Colors.Shades.White};")"
            Variant="Variant.Filled"
            Label="Votre nom">
        </MudTextField>

        <MudButton
            Style="@($"color:{Colors.Shades.Black}; background:{Colors.Yellow.Darken1};")"
            Href="https://localhost:7114/startgame"
            Variant="Variant.Filled"
            Size="Size.Large"
            FullWidth="true">
            Cr√©er la partie
        </MudButton>
    </MudStack>
</MudContainer>

@code {
    public string TextValue { get; set; }
    
    MudTheme MyCustomTheme = new MudTheme()
    {
        Typography = new Typography()
        {
            Default = new Default()
            {
                FontFamily = new[] { "Roboto", "Helvetica", "Arial", "sans-serif" }
            }
        }
    };
}